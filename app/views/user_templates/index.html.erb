<h1>List of users</h1>

<form action="/insert_user" method="post">
  <label for="username_box">Username</label>
  <input type="text" placeholder="Enter a username" id="username_box" name="query_username"></input>
  <button>Add user</button>
</form>

<hr>

<table border="1">
  <tbody>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <td></td>
    </tr>
    <% @users.each { |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><a href="/users/<%= user.username %>">Show details</a>
      </tr>
    <% } %>
  </tbody>
</table>
